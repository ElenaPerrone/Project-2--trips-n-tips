<div class="tripPage-container">
    <div class="tripPage-header">
        <h1>Hello</h1>
        <h5>Let's record any previous trips that you do not want to forget!</h5>
   
        <div class="tripPage-modal">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary create-trip" data-toggle="modal" data-target="#createTrip">Add trip</button>

        <!-- Modal & Form -->
        <div class="modal fade" id="createTrip" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Place your trip details here!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/trip" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="country">Country Visited:*</label>
                            <input type="text" class="form-control" required name="country">
                        </div>
                        <div class="form-group">
                            <label for="city">Cities Visited:</label>
                            <input type="text" class="form-control" name="city">
                        </div>
                        <div class="form-group">
                            <label for="date">Date of Trip:*</label>
                            <input type="date" class="form-control" name="date">
                        </div>
                        <div class="form-group">
                            <label for="summary">Highlight of your trip:*</label>
                            <input type="text" class="form-control" required name="summary">
                        </div>
                        <div class="form-group">
                            <label for="summary">Friends you traveled with:</label>
                            <input type="text" class="form-control" name="friends">
                        </div>
                        <div class="form-group">
                            <label for="summary">Most memorable foods:</label>
                            <input type="text" class="form-control" name="food">
                        </div>
                        <div class="form-group">
                            <label for="summary">Places you visited:</label>
                            <input type="text" class="form-control" name="landmarks">
                        </div>
                        <div class="form-group">
                            <label for="rating">Trip Rating:*</label><br>
                            <input type="radio" id="1-star" name="rating" required value="★">
                            <label for="1-star">★</label>
                            <input type="radio" id="2-star" name="rating" required value="★★">
                            <label for="2-star">★★</label>
                            <input type="radio" id="3-star" name="rating" required value="★★★">
                            <label for="3-star">★★★</label>
                            <input type="radio" id="4-star" name="rating" required value="★★★★">
                            <label for="4-star">★★★★</label>
                            <input type="radio" id="5-star" name="rating" required value="★★★★★">
                            <label for="5-star">★★★★★</label>
                        </div>
                        <div class="form-group">
                            <label for="file">Cover Photo:*</label>
                            <input type="file" required name="file">
                        </div> 
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>
        </div>
    </div>
    <div class="tripPage-trips container-fluid" >
        <div class="tripPage-row row">
            {{#each tripHbs}}
            <div class="card col-3">
                <img class="card-img-top" src="{{file}}.png" alt="{{country}} Cover Photo">
                <div class="card-body">
                    <h5 class="card-title"><b>{{country}}</b></h5>
                    <p class="card-text">{{summary}}</p>
                    <p class="card-rating">Rating: {{rating}}</p>
                    <div class="card-button">
                        <a href="/trip/{{_id}}" class="tripPageButton btn btn-primary">Read more about your trip to {{country}}</a>
                        <a href="/trip/delete/{{_id}}" class="tripPageButton btn btn-secondary">Delete trip</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
    
</div>