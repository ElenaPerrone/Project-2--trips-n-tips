<div class="signup-page-container">
    <div class="signup-page-content">
        <h3>Sign Up</h3>
        <form id="form" action="/signup" method="POST">
        <div class="form-group">
            <input type="username" class="form-control" id="username" aria-describedby="username" required name='username'
                placeholder="Username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="password" name='password' placeholder="Password">
        </div>
        <div class="form-group">
            <input type="firstname" class="form-control" id="firstname" name='firstName' aria-describedby="firstname"
                placeholder="First name">
        </div>
        <div class="form-group">
            <input type="lastname" class="form-control" id="lastname" name='lastName' aria-describedby="lastname"
                placeholder="Last name">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email"
                placeholder="Enter e-mail">
            <small id="emailHelp" class="form-text text-muted">We'll <b>never</b> share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="city" name="city" placeholder="city">
        </div>
        <div class="signup-page-action">
            <button type="submit" class="btn btn-primary">Submit</button>
            <p>Already have an account? <a href="/login">Login!</a></p>
        </div>
        
        </form>
    </div>
</div>
